<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- This is the stroke you want to define -->
    <stroke
        android:width="5sp"
        android:color="#24990D" />

    <!-- Optional, round your corners -->
    <corners
        android:bottomLeftRadius="14sp"
        android:bottomRightRadius="14sp"
        android:topLeftRadius="14sp"
        android:topRightRadius="14sp" />

    <!-- Optional, fill the rest of your background with a color or gradient, use transparent if you only want the border to be displayed-->
    <gradient
        android:angle="90"
        android:endColor="#E6FDE0"
        android:startColor="#E6FDE0" />
</shape>