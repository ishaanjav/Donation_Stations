<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- This is the stroke you want to define -->
    <stroke
        android:width="3sp"
        android:color="#8D1D1D" />

    <!-- Optional, round your corners -->
    <corners
        android:bottomLeftRadius="9sp"
        android:bottomRightRadius="9sp"
        android:topLeftRadius="9sp"
        android:topRightRadius="9sp" />

    <!-- Optional, fill the rest of your background with a color or gradient, use transparent if you only want the border to be displayed-->
    <gradient
        android:angle="90"
        android:endColor="#E74242"
        android:startColor="#E74242" />
</shape>