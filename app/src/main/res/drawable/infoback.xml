<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- This is the stroke you want to define -->
    <stroke
        android:width="2sp"
        android:color="#532BC2" />

    <!-- Optional, round your corners -->
    <corners
        android:bottomLeftRadius="0sp"
        android:bottomRightRadius="5sp"
        android:topLeftRadius="0sp"
        android:topRightRadius="5sp" />

    <!-- Optional, fill the rest of your background with a color or gradient, use transparent if you only want the border to be displayed-->
    <gradient
        android:angle="90"
        android:endColor="#FFFFFF"
        android:startColor="#FFFFFF" />
</shape>
