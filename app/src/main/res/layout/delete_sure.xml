<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel22"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@drawable/deleted_back"
    android:focusableInTouchMode="true"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4sp"
            android:fontFamily="@font/caviarbold"
            android:text="Are You Sure?"
            android:textAlignment="center"
            android:textColor="#974444"
            android:textSize="38sp" />

        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:layout_below="@+id/title"
            android:layout_marginTop="2sp"
            android:background="#FF0000"></RelativeLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bar"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:text="Deleting your account is an irreversible process and once deleted, you will have to create a new account.\nDo you want to delete the account?"
            android:textSize="21sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll"
            android:layout_below="@id/message"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/stay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:background="#fff"
                android:text="No,\nStay"
                android:layout_weight="1"
                android:layout_marginTop="5sp"
                android:textAllCaps="false"
                android:textColor="#C94040"
                android:textSize="25sp" />
            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:background="#C94040"
                android:text="Yes,\nDelete"
                android:layout_weight="1"
                android:layout_marginTop="5sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="25sp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>