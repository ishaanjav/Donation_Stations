<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E1E2E3">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7sp"
                android:fontFamily="@font/caviarbold"
                android:paddingBottom="4sp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#3C0101"
                android:textSize="26sp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/list"
            android:transcriptMode="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel"
            android:divider="#C96B6B"
            android:layout_above="@+id/viewMap"
            android:dividerHeight="7sp"></ListView>

        <Button
            android:id="@+id/viewMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#C51E1E"
            android:text="View Map"
            android:textColor="#fff"
            android:textSize="25sp" />
    </RelativeLayout>
</FrameLayout>