<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confettiH"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.github.jinatonic.confetti.ConfettiView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="50sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:cardCornerRadius="20sp">

        <RelativeLayout
            android:id="@+id/confettiHr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E3FFC9">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4sp"
                android:fontFamily="@font/caviarbold"
                android:text="Congratulations!"
                android:textAlignment="center"
                android:textColor="#4e9213"
                android:textSize="37sp" />

            <RelativeLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:layout_below="@+id/title"
                android:layout_marginTop="1sp"
                android:background="#4e9213"></RelativeLayout>

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bar"
                android:layout_marginLeft="6sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="6sp"
                android:text="You are now ready to sign in to your account!\nBut first, you may want to save the following details:"
                android:textColor="#052506"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="6sp"
                android:textColor="#118802"
                android:textSize="20sp" />


            <Button
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info"
                android:layout_marginTop="12sp"
                android:background="#fff"
                android:text="I have saved the info"
                android:textAllCaps="false"
                android:textColor="#0dac15"
                android:textSize="25sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
