        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:layout_below="@+id/rel"
            android:layout_marginTop="15sp"
            android:background="@drawable/background1"></RelativeLayout>

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8sp"
            android:fontFamily="@font/caviarbold"
            android:text="Account Info"
            android:textAlignment="center"
            android:textColor="#4e9213"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/error2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="-4sp"
            android:layout_marginRight="5sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#b22"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/userHelp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_below="@id/error2"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="9sp"
            android:src="@drawable/helpicon" />

        <RelativeLayout
            android:id="@+id/relU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/error2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="3sp"
            android:layout_marginTop="0sp"
            android:layout_toRightOf="@id/userHelp"
            android:background="@drawable/smallbackground">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:background="@drawable/userpasswordbox"
                android:paddingLeft="9sp"
                android:paddingTop="4sp"
                android:paddingRight="9sp"
                android:paddingBottom="4sp">

                <ImageView
                    android:id="@+id/imgU"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="1sp"
                    android:src="@drawable/user" />

                <RelativeLayout
                    android:id="@+id/rel3"
                    android:layout_width="3sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="4sp"
                    android:layout_toRightOf="@+id/imgU"
                    android:background="#137300"></RelativeLayout>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9sp"
                    android:layout_toRightOf="@id/rel3"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="Username"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:nextFocusForward="@+id/password"
                    android:paddingLeft="6sp"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_color" />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/passHelp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_below="@id/relU"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="14sp"
            android:src="@drawable/helpicon" />

        <RelativeLayout
            android:id="@+id/relP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relU"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="3sp"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/passHelp"
            android:background="@drawable/smallbackground">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:background="@drawable/userpasswordbox"
                android:paddingLeft="9sp"
                android:paddingTop="4sp"
                android:paddingRight="9sp"
                android:paddingBottom="4sp">

                <ImageView
                    android:id="@+id/imgP"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="1sp"
                    android:src="@drawable/pass" />

                <RelativeLayout
                    android:id="@+id/rel31"
                    android:layout_width="3sp"
                    android:layout_height="45sp"
                    android:layout_marginLeft="4sp"
                    android:layout_toRightOf="@+id/imgP"
                    android:background="#137300"></RelativeLayout>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9sp"
                    android:layout_toRightOf="@id/rel31"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:fontFamily="@font/regular"
                    android:hint="Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="6sp"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_color" />
            </RelativeLayout>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relP"
            android:layout_centerHorizontal="true"
            android:id="@+id/re"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="6sp"
            android:background="@drawable/bigbackground"
            app:cardCornerRadius="13sp"
            app:cardElevation="3sp">

            <Button
                android:id="@+id/nextB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0dac15"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="Next Page"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="25sp" />


        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/invisi"
            android:layout_toRightOf="@+id/re"
            android:visibility="invisible"
            />


    </RelativeLayout>

</ScrollView>