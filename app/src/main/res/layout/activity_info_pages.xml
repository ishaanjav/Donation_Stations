            android:textColor="#4e9213"
            android:textSize="31sp" />

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/next"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="3sp"
            android:layout_marginRight="5sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#b22"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/typeHelp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_below="@id/error"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="9sp"
            android:src="@drawable/helpicon" />

        <TextView
            android:id="@+id/typeText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="9sp"
            android:layout_toRightOf="@+id/typeHelp"
            android:text="I am a"
            android:textSize="23sp" />

        <ToggleButton
            android:id="@+id/togglebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error"
            android:layout_marginLeft="7sp"
            android:layout_marginTop="0sp"
            android:layout_toRightOf="@id/typeText2"
            android:background="@drawable/toggle_selector"
            android:fontFamily="@font/regular"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:textAllCaps="false"
            android:textColor="#0eb016"
            android:textOff="Shelter"
            android:textOn="Restaurant"
            android:textSize="24sp" />

